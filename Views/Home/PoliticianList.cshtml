
@{
    ViewData["Title"] = "PoliticianList";
}



<div class="container mt-4">
    <h3 class="mb-3">Seznam politiků</h3>
    <ul class="list-group">
        @foreach (var pid in ViewBag.politician_list as List<string>)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @Html.ActionLink(pid, "PoliticDetail", "Home", new { politic_id = pid }, new { @class = "text-decoration-none fw-bold" })
                <span class="badge bg-primary rounded-pill">Detail</span>
            </li>
        }
    </ul>
</div>
